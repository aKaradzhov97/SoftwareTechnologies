<div class="container body-content">
    <h1>Your articles:</h1>
    <div class="row">
        {{#each articles}}
            <div class="col-md-12">
                <article>
                    <header>
                        <h3>{{this.title}}</h3>
                    </header>

                    <p>{{this.content}}
                    </p>

                    <small class="author">
                        {{this.User.fullName}}
                    </small>

                    <small class="author">
                        {{this.date}}
                    </small>

                    <footer>
                        <div class="pull-left">
                            <a class="btn btn-default btn-sm btn-info" href="/article/edit/{{this.id}}">Edit</a>
                            <a class="btn btn-default btn-sm btn-danger" href="/article/delete/{{this.id}}">Delete</a>
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-default btn-sm" href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
</div>
